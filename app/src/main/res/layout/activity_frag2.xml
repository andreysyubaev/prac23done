<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray"
    tools:deviceIds="wear"
    android:padding="10dp"
    tools:context=".frag2">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="-23dp"
        tools:layout_editor_absoluteY="9dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Go to\n WorldSkills 2019"
                android:textAlignment="center"
                android:textColor="@color/aqumarine" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:drawableLeft="@drawable/text"
                android:paddingLeft="20dp"
                android:gravity="center"
                android:text="10.000 steps"
                android:textAlignment="center"
                android:textColor="@color/whine"
                android:textSize="20sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="15dp"
                android:text="Description"
                android:textAlignment="center"
                android:textColor="@color/aqumarine" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:text="Lorem ipsum dolor sit amet,\n consectetur adipiscing elit.\n Donec luctus metus at eleifend\n porttitor. Sed et uma ut nulla\n condimentum laoreel. Duis et\n veit ut leo varius blandit.\n Curabitur accumsan nisi eu leo\n tristique sollicitudin. Praesent\n vulputate odio ut porta/n sollicitudin. Ut accumsan elit\n orci, in congue turpis posuere \nac."
                android:textAlignment="textStart"
                android:textColor="@color/whine" /> 
            <Button
                android:id="@+id/button2"
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:textAllCaps="false"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:onClick="take_result"
                android:background="@drawable/button"
                android:textColor="@color/whine"
                android:text="Send result">
            </Button>

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>